<section class="mb-3" id="scrollspyContact">
    <h1 class="fs-2">Contact</h1>
    <div class="container container-sm">
        <form action="/sendEmail" method="POST" novalidate class="validated-form">
            <div class="d-sm-flex flex-row mb-3 w-50">
                <div class="me-3">
                    <label for="name" class="form-label">Your Name</label>
                    <input type="text" name="contact[name]" id="name" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter your name.
                    </div>
                </div>
                <div class="me-3">
                    <label for="email" class="form-label">Your Email</label>
                    <input type="email" class="form-control" id="email" name="contact[email]"
                        placeholder="" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter your email.
                    </div>
                </div>
            </div>
            <div class="mb-3 d-flex flex-column w-50">
                <div class="mb-3">
                    <label for="subject" class="form-label">Subject</label>
                    <input type="text" name="contact[subject]" id="subject" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter subject.
                    </div>
                </div>
                <div class=" mt-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" name="contact[message]" id="message" rows="3"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a message.
                    </div>
                </div>
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</section>